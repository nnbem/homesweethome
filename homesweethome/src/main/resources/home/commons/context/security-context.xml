<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:c="http://www.springframework.org/schema/c"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.2.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<beans:bean id="CustomAuthenticationProvider"
				class="home.staff.security.CustomAuthenticationProvider"
				c:employeeService-ref="EmployeeService"/>
	
	<beans:bean id="LoginSuccessHandler"
				class="home.staff.security.LoginSuccessHandler"
				c:logFileName="login_user_log.csv"
				c:logSavedPath-ref="logSavedPath"
				p:defaultTargetUrl="/staff/index"/>
	
	<beans:bean id="LoginFailureHandler"
				class="home.staff.security.LoginFailureHandler"/>
				
	<authentication-manager id="auth_manager">
		<authentication-provider ref="CustomAuthenticationProvider"/>
	</authentication-manager>
	
	<http pattern="/resources/**" security="none"/>
	<http use-expressions="true" pattern="/staff/**"  authentication-manager-ref="auth_manager">
		
		<access-denied-handler error-page="/staff/accessDenied" />
		<intercept-url pattern="/staff/main*" access="isAuthenticated()"/>
		<intercept-url pattern="/staff/animalcare*" access="isAuthenticated()"/>
		
		
		<intercept-url pattern="/staff/login*" access="permitAll"/>
		<intercept-url pattern="/**" access="permitAll"/>
		
		<form-login
			login-page="/staff/login"
			login-processing-url="/staff/login/post"
			username-parameter="eid"
			password-parameter="pwd"
			authentication-success-handler-ref="LoginSuccessHandler"
			authentication-failure-handler-ref="LoginFailureHandler"
			/>
		<logout
			logout-url="/staff/logout"
			logout-success-url="/staff/login"
			invalidate-session="true"
			delete-cookies="JSESSIONID"
			/>

		<session-management invalid-session-url="/staff/loginTimeOut">
			<concurrency-control
				expired-url="/staff/loginExpired"
				max-sessions="1"
				session-registry-ref="sessionRegistry"
			/>
		</session-management>
	
	</http>
	
	<beans:bean id="sessionRegistry"
				class="org.springframework.security.core.session.SessionRegistryImpl"/>
	
	
</beans:beans>













